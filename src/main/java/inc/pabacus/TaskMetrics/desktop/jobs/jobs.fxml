<?xml version="1.0" encoding="UTF-8"?>

<?import com.jfoenix.controls.JFXComboBox?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Hyperlink?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.Cursor?>
<?import javafx.scene.layout.*?>
<AnchorPane fx:id="dynamicContentPane" prefHeight="720" prefWidth="925" xmlns="http://javafx.com/javafx/8.0.172-ea"
            xmlns:fx="http://javafx.com/fxml/1" fx:controller="inc.pabacus.TaskMetrics.desktop.jobs.JobsPresenter">
  <BorderPane prefHeight="55.0" prefWidth="200.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0"
              AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
    <top>
      <AnchorPane prefHeight="53.0" prefWidth="200.0" BorderPane.alignment="CENTER">
        <BorderPane prefHeight="62.0" prefWidth="200.0" AnchorPane.bottomAnchor="0.0"
                    AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
          <left>
            <GridPane alignment="CENTER_LEFT" nodeOrientation="LEFT_TO_RIGHT" prefHeight="53.0"
                      prefWidth="446.0">
              <columnConstraints>
                <ColumnConstraints hgrow="SOMETIMES" maxWidth="0.0" minWidth="0.0"
                                   percentWidth="100.0" prefWidth="104.0"/>
              </columnConstraints>
              <rowConstraints>
                <RowConstraints/>
                <RowConstraints/>
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
              </rowConstraints>
              <cursor>
                <Cursor fx:constant="DEFAULT"/>
              </cursor>
              <HBox alignment="CENTER_LEFT" prefHeight="53.0" prefWidth="299.0"
                    GridPane.rowIndex="2">
                <GridPane.margin>
                  <Insets left="25.0"/>
                </GridPane.margin>
                <JFXComboBox fx:id="jobComboBox" onAction="#viewByJob" prefWidth="150.0"/>
                <Hyperlink fx:id="addJobLink" onAction="#addJob" text="Add Job"/>
                <Hyperlink focusTraversable="false" onAction="#viewWorkSummary" text="Work Summary"/>

              </HBox>
            </GridPane>
          </left>
        </BorderPane>
      </AnchorPane>
    </top>
    <center>
      <TableView fx:id="jobsTable" prefHeight="609.0"
                 style="-fx-background-color: transparent; -fx-border-color: lightgray;"
                 BorderPane.alignment="CENTER">
        <columnResizePolicy>
          <TableView fx:constant="CONSTRAINED_RESIZE_POLICY"/>
        </columnResizePolicy>
        <BorderPane.margin>
          <Insets bottom="25.0" left="25.0" right="25.0"/>
        </BorderPane.margin>
      </TableView>
    </center>
  </BorderPane>
</AnchorPane>