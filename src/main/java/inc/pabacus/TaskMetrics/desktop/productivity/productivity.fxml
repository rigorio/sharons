                        </GridPane.margin>
                        <children>
                          <JFXComboBox fx:id="dayCombobox" minWidth="-Infinity"
                                       onAction="#filterRecords" prefWidth="150.0"/>
                        </children>
                      </HBox>
                    </children>
                    <cursor>
                      <Cursor fx:constant="DEFAULT"/>
                    </cursor>
                    <BorderPane.margin>
                      <Insets bottom="25.0" left="25.0" right="25.0" top="25.0"/>
                    </BorderPane.margin>
                  </GridPane>
                </left>
              </BorderPane>
            </top>
          </BorderPane>
        </children>
