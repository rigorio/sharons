                        BorderPane.alignment="CENTER">
                <xAxis>
                  <CategoryAxis side="BOTTOM"/>
                </xAxis>
                <yAxis>
                  <NumberAxis prefWidth="44.0" side="LEFT"/>
                </yAxis>
                <BorderPane.margin>
                  <Insets left="18.0" right="18.0" top="25.0"/>
                </BorderPane.margin>
              </BarChart>
            </center>
            <bottom>
              <BorderPane minWidth="0.0" BorderPane.alignment="CENTER">
                <top>
                  <BorderPane BorderPane.alignment="CENTER">
