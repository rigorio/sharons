<?xml version="1.0" encoding="UTF-8"?>

<?import com.jfoenix.controls.JFXComboBox?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.Cursor?>
<?import javafx.scene.layout.*?>
<AnchorPane fx:id="mainPane" prefHeight="720" prefWidth="925" xmlns="http://javafx.com/javafx/8.0.172-ea"
            xmlns:fx="http://javafx.com/fxml/1" fx:controller="inc.pabacus.TaskMetrics.desktop.tasks.TasksPresenter">
  <BorderPane layoutX="20.0" layoutY="20.0" prefHeight="55.0" prefWidth="200.0" AnchorPane.bottomAnchor="0.0"
              AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
    <top>
      <AnchorPane prefHeight="53.0" prefWidth="200.0" BorderPane.alignment="CENTER">
        <BorderPane prefHeight="62.0" prefWidth="200.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0"
                    AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
          <right>
            <GridPane alignment="CENTER" nodeOrientation="LEFT_TO_RIGHT" prefHeight="53.0" prefWidth="333.0"
                      BorderPane.alignment="CENTER">
              <columnConstraints>
                <ColumnConstraints hgrow="SOMETIMES" maxWidth="0.0" minWidth="0.0" percentWidth="100.0"
                                   prefWidth="104.0"/>
              </columnConstraints>
              <rowConstraints>
                <RowConstraints/>
                <RowConstraints/>
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
              </rowConstraints>
              <cursor>
                <Cursor fx:constant="DEFAULT"/>
              </cursor>
              <HBox alignment="CENTER" prefHeight="53.0" prefWidth="299.0" GridPane.rowIndex="2">
                <Hyperlink focusTraversable="false" onAction="#newTask" text="+ New Task"/>
                <Label text="|" textFill="#aeaead"/>
                <Hyperlink fx:id="startLink" focusTraversable="false" onAction="#startTask" text="Start"/>
                <Label text="|" textFill="#aeaead"/>
                <Hyperlink fx:id="refreshButton" focusTraversable="false" onAction="#refreshTask" text="Refresh"/>
                <Label text="|" textFill="#aeaead"/>
                <Hyperlink focusTraversable="false" onAction="#viewWorkSummary" text="Work Summary"/>
              </HBox>
            </GridPane>
          </right>
          <left>
            <GridPane alignment="CENTER_LEFT" nodeOrientation="LEFT_TO_RIGHT" prefHeight="53.0" prefWidth="446.0">
              <columnConstraints>
                <ColumnConstraints hgrow="SOMETIMES" maxWidth="0.0" minWidth="0.0" percentWidth="100.0"
                                   prefWidth="104.0"/>
              </columnConstraints>
              <rowConstraints>
                <RowConstraints/>
                <RowConstraints/>
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
              </rowConstraints>
              <cursor>
                <Cursor fx:constant="DEFAULT"/>
              </cursor>
              <HBox alignment="CENTER_LEFT" prefHeight="53.0" prefWidth="299.0" GridPane.rowIndex="2">
                <GridPane.margin>
                  <Insets left="25.0"/>
                </GridPane.margin>
                <Hyperlink focusTraversable="false" onAction="#viewJobsPage" text="Back"/>
                <JFXComboBox fx:id="statusBox" focusTraversable="false" onAction="#updateTable" prefHeight="25.0"
                             prefWidth="148.0">
                  <HBox.margin>
                    <Insets left="5.0"/>
                  </HBox.margin>
                </JFXComboBox>
                <JFXComboBox fx:id="timeBox" focusTraversable="false" onAction="#updateTable" prefHeight="25.0"
                             prefWidth="148.0">
                  <HBox.margin>
                    <Insets left="5.0"/>
                  </HBox.margin>
                </JFXComboBox>
              </HBox>
            </GridPane>
          </left>
        </BorderPane>
      </AnchorPane>
    </top>
    <center>
      <TableView fx:id="tasksTable" onMouseClicked="#tableClicked" prefHeight="609.0"
                 style="-fx-background-color: transparent; -fx-border-color: lightgray;" BorderPane.alignment="CENTER">
        <columnResizePolicy>
          <TableView fx:constant="CONSTRAINED_RESIZE_POLICY"/>
        </columnResizePolicy>
        <BorderPane.margin>
          <Insets bottom="25.0" left="25.0" right="25.0"/>
        </BorderPane.margin>
      </TableView>
    </center>
  </BorderPane>
</AnchorPane>
