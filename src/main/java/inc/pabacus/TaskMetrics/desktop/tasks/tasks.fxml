<?xml version="1.0" encoding="UTF-8"?>

<?import com.jfoenix.controls.JFXButton?>
<?import com.jfoenix.controls.JFXComboBox?>
<?import com.jfoenix.controls.JFXTextArea?>
<?import com.jfoenix.controls.JFXTextField?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="720" prefWidth="925" xmlns="http://javafx.com/javafx/8.0.172-ea"
            xmlns:fx="http://javafx.com/fxml/1" fx:controller="inc.pabacus.TaskMetrics.desktop.tasks.TasksPresenter">
  <AnchorPane layoutX="14.0" layoutY="429.0" prefHeight="109.0" prefWidth="897.0"
              style="-fx-border-width: 1; -fx-border-color: #008080;">
    <JFXTextField fx:id="titleText" layoutX="14.0" layoutY="16.0" prefHeight="31.0" prefWidth="147.0"/>
    <JFXComboBox fx:id="progressText" layoutX="183.0" layoutY="63.0" prefHeight="31.0" prefWidth="90.0"/>
    <JFXComboBox fx:id="statusText" layoutX="14.0" layoutY="63.0" prefHeight="31.0" prefWidth="147.0"/>
    <JFXComboBox fx:id="priorityText" layoutX="183.0" layoutY="16.0" prefHeight="31.0" prefWidth="90.0"/>
    <JFXTextArea fx:id="descriptionText" layoutX="289.0" layoutY="16.0" prefHeight="77.0" prefWidth="519.0"/>
    <JFXButton fx:id="deleteTask" layoutX="820.0" layoutY="16.0" mnemonicParsing="false" onAction="#deleteTask"
               style="-fx-background-color: #ef5350;" text="Delete" textFill="WHITE"/>
    <JFXButton fx:id="saveTask" layoutX="820.0" layoutY="63.0" mnemonicParsing="false" onAction="#saveTask"
               prefHeight="31.0" prefWidth="63.0" style="-fx-background-color: #008080;" text="Save" textFill="WHITE"/>
  </AnchorPane>

  <JFXButton alignment="CENTER" buttonType="RAISED" layoutX="129.0" layoutY="13.0" onAction="#viewScreenShot"
             prefHeight="31.0" prefWidth="169.0" style="-fx-background-color: #008080;" text="View Screenshots"
             textFill="WHITE"/>
  <JFXButton alignment="CENTER" buttonType="RAISED" layoutX="14.0" layoutY="14.0" onAction="#newTask" prefHeight="30"
             prefWidth="108.0" style="-fx-padding: 0,0,10,0; -fx-background-color: #008080;" text="+ New Task"
             textFill="WHITE"/>
  <TableView fx:id="tasksTable" layoutX="14.0" layoutY="106.0" prefHeight="314.0" prefWidth="897.0">
    <columnResizePolicy>
      <TableView fx:constant="CONSTRAINED_RESIZE_POLICY"/>
    </columnResizePolicy>
  </TableView>
  <JFXButton fx:id="startButton" layoutX="783.0" layoutY="13.0" mnemonicParsing="false" onAction="#startTask"
             style="-fx-background-color: #008080;" text="Start" textFill="WHITE"/>
  <JFXButton fx:id="refreshButton" layoutX="841.0" layoutY="13.0" mnemonicParsing="false" onAction="#refreshTask"
             style="-fx-background-color: #008080;" text="Refresh" textFill="WHITE"/>
  <TableView fx:id="taskTimesheet" layoutX="14.0" layoutY="547.0" prefHeight="128.0" prefWidth="897.0">
    <columnResizePolicy>
      <TableView fx:constant="CONSTRAINED_RESIZE_POLICY"/>
    </columnResizePolicy>
  </TableView>
  <JFXComboBox layoutX="14.0" layoutY="57.0" prefWidth="150.0"/>
  <Label layoutX="24.0" layoutY="685.0" text="Total">
    <font>
      <Font name="System Bold" size="15.0"/>
    </font>
  </Label>
  <Label fx:id="totalbillable" layoutX="186.0" layoutY="685.0" text="00.00"/>
  <Label layoutX="255.0" layoutY="685.0" text="Non-Billable:">
    <font>
      <Font name="System Italic" size="15.0"/>
    </font>
  </Label>
  <Label fx:id="totalNonBillable" layoutX="346.0" layoutY="685.0" text="00.00"/>
  <Label layoutX="408.0" layoutY="685.0" text="Total Hours:">
    <font>
      <Font name="System Italic" size="15.0"/>
    </font>
  </Label>
  <Label layoutX="129.0" layoutY="685.0" text="Billable:">
    <font>
      <Font name="System Italic" size="15.0"/>
    </font>
  </Label>
  <Label fx:id="totalHours" layoutX="496.0" layoutY="685.0" text="00.00"/>
  <Label layoutX="563.0" layoutY="685.0" text="\% Billable:">
    <font>
      <Font name="System Italic" size="15.0"/>
    </font>
  </Label>
  <Label fx:id="totalPercentBillable" layoutX="637.0" layoutY="685.0" text="00.00"/>
  <Label layoutX="731.0" layoutY="685.0" text="Invoice Amount:">
    <font>
      <Font name="System Italic" size="15.0"/>
    </font>
  </Label>
  <Label fx:id="totalInvoice" layoutX="841.0" layoutY="685.0" text="00.00">


  </Label>
</AnchorPane>
