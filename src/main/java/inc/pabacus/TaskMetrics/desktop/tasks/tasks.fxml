<?xml version="1.0" encoding="UTF-8"?>

<?import com.jfoenix.controls.JFXButton?>
<?import com.jfoenix.controls.JFXComboBox?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.AnchorPane?>

<AnchorPane fx:id="mainPane" prefHeight="720" prefWidth="925" xmlns="http://javafx.com/javafx/8.0.141" xmlns:fx="http://javafx.com/fxml/1" fx:controller="inc.pabacus.TaskMetrics.desktop.tasks.TasksPresenter">
  <TableView fx:id="tasksTable" layoutX="14.0" layoutY="59.0" prefHeight="609.0" prefWidth="884.0">
    <columnResizePolicy>
      <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
    </columnResizePolicy>
  </TableView>
  <JFXButton alignment="CENTER" buttonType="RAISED" layoutX="682.0" layoutY="13.0" onAction="#newTask" style="-fx-background-color: #008080;" text="+ New Task" textFill="WHITE" />
  <JFXButton fx:id="startButton" layoutX="784.0" layoutY="13.0" mnemonicParsing="false" onAction="#startTask" style="-fx-background-color: #008080;" text="Start" textFill="WHITE" />
  <JFXButton fx:id="refreshButton" layoutX="841.0" layoutY="13.0" mnemonicParsing="false" onAction="#refreshTask" style="-fx-background-color: #008080;" text="Refresh" textFill="WHITE" />
  <JFXComboBox fx:id="statusBox" layoutX="14.0" layoutY="13.0" onAction="#wowStatusBoxChange" prefWidth="150.0" />
   <JFXButton layoutX="765.0" layoutY="675.0" onAction="#viewWorkSummary" prefHeight="25.0" prefWidth="133.0" style="-fx-background-color: #008080;" text="View work summary" textFill="WHITE" />
</AnchorPane>
