<?xml version="1.0" encoding="UTF-8"?>

<?import com.jfoenix.controls.JFXComboBox?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.Cursor?>
<?import javafx.scene.layout.*?>
<AnchorPane fx:id="mainPane" prefHeight="720" prefWidth="900.0" style="-fx-background-color: #FFF;"
            xmlns="http://javafx.com/javafx/8.0.141" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="inc.pabacus.TaskMetrics.desktop.timesheet.TimesheetPresenter">
  <BorderPane layoutX="20.0" layoutY="20.0" prefHeight="55.0" prefWidth="200.0" AnchorPane.bottomAnchor="0.0"
              AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
    <top>
      <AnchorPane prefHeight="53.0" prefWidth="200.0" BorderPane.alignment="CENTER">
        <BorderPane prefHeight="62.0" prefWidth="200.0" AnchorPane.bottomAnchor="0.0"
                    AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
          <left>
            <GridPane alignment="CENTER_LEFT" nodeOrientation="LEFT_TO_RIGHT" prefHeight="53.0"
                      prefWidth="446.0">
              <columnConstraints>
                <ColumnConstraints hgrow="SOMETIMES" maxWidth="0.0" minWidth="0.0"
                                   percentWidth="100.0" prefWidth="104.0"/>
              </columnConstraints>
              <rowConstraints>
                <RowConstraints/>
                <RowConstraints/>
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
              </rowConstraints>
              <children>
                <HBox alignment="CENTER_LEFT" GridPane.rowIndex="2">
                  <GridPane.margin>
                    <Insets left="25.0"/>
                  </GridPane.margin>
                  <children>
                    <Label alignment="BASELINE_CENTER" text="Current status:"
                           HBox.hgrow="NEVER">
                      <HBox.margin>
                        <Insets top="10.0"/>
                      </HBox.margin>
                    </Label>
                    <JFXComboBox fx:id="comboBox" focusTraversable="false"
                                 onAction="#updateStatus" visibleRowCount="5">
                      <HBox.margin>
                        <Insets left="10.0"/>
                      </HBox.margin>
                    </JFXComboBox>
                  </children>
                </HBox>
              </children>
              <cursor>
                <Cursor fx:constant="DEFAULT"/>
              </cursor>
            </GridPane>
          </left>
        </BorderPane>
      </AnchorPane>
    </top>
    <center>
      <TableView id="timesheet" fx:id="timeSheet" prefHeight="584.0" prefWidth="872.0"
                 style="-fx-background-color: transparent; -fx-border-color: lightgray;"
                 BorderPane.alignment="CENTER">
        <BorderPane.margin>
          <Insets bottom="25.0" left="25.0" right="25.0"/>
        </BorderPane.margin>
      </TableView>
    </center>
  </BorderPane>
</AnchorPane>
