      <TableView fx:id="gownsTable" prefHeight="695.0" prefWidth="875.0"
                 style="-fx-background-color: transparent; -fx-border-color: lightgray;" BorderPane.alignment="CENTER">
        <columnResizePolicy>
          <TableView fx:constant="CONSTRAINED_RESIZE_POLICY"/>
        </columnResizePolicy>
        <BorderPane.margin>
          <Insets bottom="25.0" left="25.0" right="25.0"/>
        </BorderPane.margin>
      </TableView>
    </center>
    <top>
      <AnchorPane prefHeight="46.0" prefWidth="925.0" BorderPane.alignment="CENTER">
        <BorderPane.margin>
          <Insets bottom="25.0" left="25.0" right="25.0"/>
        </BorderPane.margin>
        <JFXTextField fx:id="filterText" layoutX="22.0" layoutY="6.0" onKeyReleased="#filter" prefHeight="31.0"
