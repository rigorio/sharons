        <Hyperlink layoutX="769.0" layoutY="7.0" onAction="#add" text="Add"/>
        <Hyperlink layoutX="807.0" layoutY="7.0" onAction="#edit" text="Edit"/>
        <Hyperlink layoutX="716.0" layoutY="7.0" onAction="#delete" text="Delete"/>
        <Hyperlink layoutX="843.0" layoutY="7.0" onAction="#refresh" text="Refresh"/>
      </AnchorPane>
    </top>
  </BorderPane>
</AnchorPane>
